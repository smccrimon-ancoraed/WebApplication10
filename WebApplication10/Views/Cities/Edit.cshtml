@model WebApplication10.Models.City

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="myEditform">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input id="cname" asp-for="Name" required class="form-control" type="text"
                       data-val="true" data-val-required="City name is required" />
                <span asp-validation-for="Name" class="text-danger field-validation-valid" data-valmsg-for="cname"
data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryCode" class="control-label"></label>
                <input id="ccode" asp-for="CountryCode" maxlength="3" required class="form-control" />
                <span asp-validation-for="CountryCode" class="text-danger"></span>


                <!--




                

    -->
            </div>
            <div class="form-group">
                <label asp-for="District" class="control-label"></label>
                <input asp-for="District" required class="form-control" />
                <span asp-validation-for="District" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Population" class="control-label"></label>
                <input asp-for="Population" class="form-control" readonly />
                <span asp-validation-for="Population" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {


    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}
