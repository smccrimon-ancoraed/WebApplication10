@model WebApplication10.Models.City

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="myCreateform">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input id="cname" asp-for="Name" required class="form-control" 
                    data-val-required="The City name is required." />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="CountryCode" class="control-label"></label>
                <input id="ccode" asp-for="CountryCode" maxlength="3" required class="form-control" />
                <span asp-validation-for="CountryCode" class="text-danger"></span>


                <!--

           @Html.ValidationMessageFor(m => m.CountryCode) html helper method.
    -->
            </div>
            <div class="form-group">
                <label asp-for="District" class="control-label"></label>
                <input asp-for="District" required class="form-control" />
                <span asp-validation-for="District" class="text-danger"></span>
                <span class="field-validation-error" data-valmsg-replace="true"
                      data-valmsg-for="District"></span>
            </div>
            <div class="form-group">
                <label asp-for="Population" class="control-label"></label>
                <input asp-for="Population" class="form-control" />
                <span asp-validation-for="Population" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <script>
            $("#myCreateform").validate();
        </script>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
